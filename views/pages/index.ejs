<%- include( '../partials/user_feedback.ejs' ); %>
<hgroup class="hero text-left">
    <% if( typeof first_name==="undefined" ){ %>
    <h1>Welcome to the workshop registration</h1>
    <% } else { %>
    <h1>Hi <%= first_name %>!</h1>
    <% }%>
    <p class="lead">Welcome to the workshop registration Website</p>
</hgroup>

<section class="featured mt-5">
    <article class="box-l">
        <h2>Upcoming Programs</h2>
        <p>Discover our exciting STEM workshops and classes.</p>
        <a href="/programs">View Programs</a>
    </article>
    
    <!-- Manage Dependents -->
    <% if( typeof first_name!=="undefined" ){ %>
    <article class="box-l">
        <h2>Family Management</h2>
        <p>Manage your family members and dependents.</p>
        <a href="/dependents" role="button">Manage Family</a>
    </article>
    <% } %>

    <!-- Sign up prompt for non-logged in users -->
    <% if( typeof first_name==="undefined" ){ %>
    <article class="box-l">
        <h2>Get Started</h2>
        <p>Create an account to register for workshops and manage your family members.</p>
        <a href="/sign_up" role="button">Sign Up Now</a>
    </article>
    <% } %>
</section>
